# Model Configuration
# Model name from HuggingFace or path to local model
MODEL=phamtungthuy/bert-movie-sentiment

# Data
DATASET_FOLDER=eraser_movie
TRAIN_DATA_FILE=movie_train.txt
DEV_DATA_FILE=movie_dev_subset.txt
USE_KMEANS=false

# Layer configuration
LAYER=12

# Clustering configuration
CLUSTER_NUM=400
CLUSTERS=400,400,400

# Frequency filtering
MINFREQ=5
MAXFREQ=20
DELFREQ=1000000

# Dataset configuration
SENTENCE_LENGTH=300

# Validation split
VALIDATION_SIZE=0.1

# LLM Explanation
LLM_MODEL=gpt-4o-mini
LLM_PROVIDER=openai