# Model Configuration
# Model name from HuggingFace or path to local model
MODEL=phamtungthuy/bert-movie-sentiment

# Layer configuration
LAYER=12

# Clustering configuration
CLUSTER_NUM=400
CLUSTERS=400,400,400

# Frequency filtering
MINFREQ=5
MAXFREQ=20
DELFREQ=1000000

# Dataset configuration
SENTENCE_LENGTH=300

# Validation split
VALIDATION_SIZE=0.1

# ========================================
# Advanced Concept Mapper Configuration
# ========================================

# Neural Network (MLP) Parameters - Optimized based on results
NN_EPOCHS=100                   # Increased for better convergence
NN_BATCH_SIZE=64               # Smaller batch for small dataset
NN_LEARNING_RATE=0.001         # Keep moderate learning rate
NN_HIDDEN_DIMS=256,128         # Simpler architecture to prevent overfitting
NN_DROPOUT=0.2                 # INCREASED dropout (was 0.0) - critical for preventing overfitting
NN_DEVICE=cuda                 # Device to use (cuda or cpu)

# Random Forest Parameters - Back to aggressive settings
RF_N_ESTIMATORS=200            # More trees for better ensemble
RF_MAX_DEPTH=None              # No limit - let it grow (was too restrictive)
RF_MIN_SAMPLES_SPLIT=2         # Default - more flexible
RF_MIN_SAMPLES_LEAF=1          # Default - more flexible
RF_MAX_FEATURES=sqrt           # Good default for classification
RF_N_JOBS=-1                   # Number of CPU cores to use (-1 for all)

# XGBoost Parameters - Tuned for small dataset with GPU
XGB_N_ESTIMATORS=300           # More rounds with early stopping
XGB_MAX_DEPTH=5                # Moderate depth
XGB_LEARNING_RATE=0.05         # Lower learning rate for better generalization
XGB_SUBSAMPLE=0.8              # Standard subsampling
XGB_COLSAMPLE_BYTREE=0.8       # Standard feature subsampling
XGB_GAMMA=0                    # No minimum loss requirement
XGB_REG_ALPHA=0                # No L1 regularization
XGB_REG_LAMBDA=1               # Standard L2 regularization
XGB_N_JOBS=-1                  # Number of CPU cores to use
XGB_EARLY_STOPPING=20          # More patience for early stopping

